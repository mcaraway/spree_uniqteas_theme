<table class="index sortable" id='listing_taxonomies' data-hook >
  <colgroup>
    <col style="width: 85%">
    <col style="width: 15%">
  <thead>
    <tr data-hook="page_header">
      <th><%= t(:name) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr id="<%= spree_dom_id page %>" data-hook="page_row" class="<%= cycle('odd', 'even')%>">
        <td>
          <span class="handle"></span>
          <%= page.name %>
        </td>
        <td class="actions">
          <%= link_to_edit page.id, :no_text => true %>
          <%= link_to_delete page, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>