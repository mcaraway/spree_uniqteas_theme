<div data-hook="admin_inside_slider_form" class="field">
  <%= f.field_container :name do %>
    <%= f.label :name, Spree.t(:name) %> <span class="required">*</span><br />
    <%= error_message_on :home_page_slider, :name, :class => 'fullwidth title' %>
    <%= text_field :home_page_slider, :name %>
  <% end %>
  <%= f.field_container :location do %>
    <%= f.label :location, Spree.t(:location) %> <span class="required">*</span><br />
    <%= error_message_on :home_page_slider, :location, :class => 'fullwidth title' %>
    <%= select :home_page_slider, :location, [['Top-Promo','top'], ['Bottom-Promo','bottom']]%>
  <% end %>
  <%= f.field_container :html do %>
    <%= f.label :html, Spree.t(:html) %> <span class="required">*</span><br />
    <%= error_message_on :home_page_slider, :html, :class => 'fullwidth title' %>
    <%= text_area :home_page_slider, :html %>
  <% end %>
</div>

<script type="text/javascript">
	$(document).ready(function() {
      $("#home_page_slider_html").markItUp(mySettings);
   });
</script>
