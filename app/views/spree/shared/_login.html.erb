<%= form_for Spree::User.new, :as => :spree_user, :url => spree.spree_user_session_path do |f| %>
<fieldset>
	<div class="control-group">
		<!-- Username -->
		<%= f.label :email, t(:email), :class => "control-label", "for" => "spree_user_email" %>
		<div class="controls">
			<%= f.email_field :email, :class => 'input-xlarge', "placeholder" => "email" %>
		</div>
	</div>

	<div class="control-group">
		<!-- Password-->
		<%= f.label :password, t(:password), :class => "control-label", "for" => "spree_user_password" %>
		<div class="controls">
			<%= f.password_field :password, :class => 'input-xlarge', "placeholder" => "password" %>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<label class="checkbox"> <%= f.check_box :remember_me, :style => "float: left; margin-right: 10px;" %>
				<%= t(:remember_me)%></label>
			<%= f.submit t(:login), :class => 'btn btn-success', :tabindex => 3 %>
		</div>
	</div>
</fieldset>
<% end %>
